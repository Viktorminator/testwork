@font-face {
  font-family: 'Pacifico';
  src: url('./fonts/Pacifico.ttf') format('truetype');
}
@import url(https://fonts.googleapis.com/css?family=Open+Sans);

$color_main = #2ECC71
$color_secondary = #999
$color_background = #e3e3e3
$color_experiment = #c25955

html
  font-family: 'Open Sans', Helvetica, Arial, sans-serif;
/* Hero */
.hero
  border-top $color_main 10px solid
  background url('./img/header.png')  no-repeat top center
  color #fff
  font-size 26px
  max-height 600px
  &__heading
    padding-top 166px
    font-family 'Pacifico'
    font-weight 400
    set-font-size(83px)
    margin-bottom remify(36px)
    margin-top 0
    & .green
      color $color_main
  &__icons
    margin-top 27px
    padding-bottom 167px
  &__app__phone
    position absolute
    bottom 0
    visibility hidden
/* Icons */
.sprite
  background url('./img/sprite.png') no-repeat top left
  width 53px
  height 53px
  display block
  float left
  opacity 0.6
  margin-right 13px
  &:hover
    opacity 1
  &.android_g
    background-position 0 0
    &:hover
      background-position 0 -63px
  &.apple_g
    background-position 0 -126px
    &:hover
      background-position 0 -189px
  &.wind_g
    background-position 0 -252px
    &:hover
      background-position 0 -315px

/* Value */
.value
  text-align center
  padding 60px 0 45px 0
  &__heading
    font-size 21px
    margin 26px 0
    font-weight 300
  &__description
    font-size 14px
    line-height 18px
    font-size: 14px;
    line-height: 2.7rem;
    color $color_secondary

/* Notify */
.notify
  background-color $color_background
  &__header
    padding-top 62px
    text-align center
    font-size 22px
  &__description
    font-size: 14px;
    line-height: 2.7rem;
    color #999
  &__form__input
    height 56px !important
/* Larger than phablet (also point when grid becomes active) */
@media (min-width: 550px)
  .hero__app__phone
    max-width 50%
    float right
    visibility visible
  .notify__description
    width 100%
/* Larger than tablet */
@media (min-width: 750px)
  .hero__app__phone
    max-height 420px



/* Larger than desktop */
@media (min-width: 1000px)
  .hero__app__phone
    max-height 505px

/* Larger than Desktop HD */
@media (min-width: 1200px) {}
.login_bar
  width 340px
  height 55px
  background white
  border-radius 10px
  top 50%
  position relative
  z-index 1
  overflow hidden
  margin auto
  margin-bottom 50px

.login
  border none
  background transparent
  position absolute
  height 100%
  width 190px
  padding-left 10px
  text-align left
  line-height 56px
  vertical-align middle
  z-index 10
  -webkit-transition transform 0.2s ease-in-out 0s
  -moz-transition transform 0.2s ease-in-out 0s
  -o-transition transform 0.2s ease-in-out 0s
  transition transform 0.2s ease-in-out 0s

.login_active
  -webkit-transform translateX(300px)
  -moz-transform translateX(300px)
  -ms-transform translateX(300px)
  -o-transform translateX(300px)
  transform translateX(300px)

.subscribe_button
  background $color_main
  position absolute
  top -48px
  left 200px
  border none
  border-top-right-radius 10px
  border-bottom-right-radius 10px
  height 150px
  width 140px
  text-align center
  line-height 150px
  vertical-align middle
  color white
  font-size 22px
  font-weight 400
  &:hover
    background-color #222A33
    cursor pointer
  &.button_experiment
    background-color $color_experiment !important

/* Links */
.foomenu
  height 132px
  &__links
    padding-top 60px
    text-align center
  &__link
    margin 10px 20px 0 0
    color $color_secondary
    text-decoration none
    font-size 16px
    &:hover
      color $color_main
